<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.addJacket.NewType_Add_Menu">

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/NewType_LayoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Jacket:"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/NewType_Jacket_Et"
                android:layout_width="200dp"
                android:gravity="center"
                android:hint="Ej: Rompevientos"
                android:layout_height="50dp"/>

            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/NewType_Quantity_Et"
                android:layout_width="200dp"
                android:gravity="center"
                android:hint="####"
                android:layout_height="50dp"/>

            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost:"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/NewType_Cost_Et"
                android:layout_width="200dp"
                android:gravity="center"
                android:hint="$$$$"
                android:layout_height="50dp"/>

            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/NewType_Date_Et"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="Choose a date"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Button_Color"
                android:text="Add Jacket"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>